<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wjx.crm.workbench.dao.ContactsRemarkDao">

    <delete id="deleteRemark">
        delete from tbl_contacts_remark where id=#{id}
    </delete>


    <update id="updateRemark">

        update tbl_contacts_remark set noteContent=#{noteContent},editBy=#{editBy},editTime=#{editTime},editFlag=#{editFlag}

        where id=#{id}
    </update>

    <insert id="saveRemark">
        insert into tbl_contacts_remark(

            id,
            noteContent,
            createTime,
            createBy,
            editFlag,
            contactsId

        )

        values (

                   #{id},
                   #{noteContent},
                   #{createTime},
                   #{createBy},
                   #{editFlag},
                   #{contactsId}
               )
    </insert>

    <select id="getRemarkListByCid" resultType="ContactsRemark">

        select * from tbl_contacts_remark where contactsId=#{contactsId}

    </select>

    <delete id="deleteByCids">

        delete

        from tbl_contacts_remark

        where contactsId in

        <foreach collection="array" item="cid" open="(" close=")" separator=",">

            #{cid}

        </foreach>

    </delete>

    <select id="getCountByCids" resultType="int">

        select count(*)

        from tbl_contacts_remark

        where contactsId in

        <foreach collection="array" item="cid" open="(" close=")" separator=",">

            #{cid}

        </foreach>
    </select>

    <insert id="save">

        insert into tbl_contacts_remark(

            id,
            noteContent,
            createTime,
            createBy,
            editFlag,
            contactsId

        )

        values (

                   #{id},
                   #{noteContent},
                   #{createTime},
                   #{createBy},
                   #{editFlag},
                   #{contactsId}
               )

    </insert>
	
  	
</mapper>

































